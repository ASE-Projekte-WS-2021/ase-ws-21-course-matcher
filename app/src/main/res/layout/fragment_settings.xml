<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.settings.SettingsFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_header"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_back_button"
                android:src="@drawable/ic_back_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/readexpro_semibold"
                android:text="@string/title_settings"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/link_edit_profile"
                layout="@layout/item_settings_link" />

            <include
                android:id="@+id/link_edit_account"
                layout="@layout/item_settings_link" />

            <include
                android:id="@+id/link_notifications"
                layout="@layout/item_settings_link" />

            <include
                android:id="@+id/link_privacy_policy"
                layout="@layout/item_settings_link" />

            <include
                android:id="@+id/link_imprint"
                layout="@layout/item_settings_link" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvVersionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_screen_padding"
            android:textAlignment="center"
            android:textColor="@color/gray600"
            android:textSize="12sp"
            tools:text="App-Version 1.3.9" />
    </LinearLayout>
</ScrollView>