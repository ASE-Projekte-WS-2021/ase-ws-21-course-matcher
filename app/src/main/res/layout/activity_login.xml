<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.auth.LoginActivity">

    <LinearLayout
        android:id="@+id/headerLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_header_orange"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_small"
        android:paddingVertical="@dimen/padding_medium"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_double"
            android:layout_marginBottom="@dimen/small_margin"
            android:gravity="start"
            android:text="@string/loginTitle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/loginTitleDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_big"
            android:layout_marginBottom="@dimen/small_margin"
            android:gravity="start"
            android:text="@string/loginTitleDesc"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:orientation="vertical"
        android:padding="@dimen/padding_big"
        app:layout_constraintTop_toBottomOf="@+id/headerLogin">

        <TextView
            android:id="@+id/loginEmailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_big"
            android:layout_marginBottom="@dimen/small_margin"
            android:gravity="start"
            android:text="@string/loginEmailTxt"
            android:textColor="@color/gray500"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/loginEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:ems="10"
            android:paddingStart="@dimen/padding_small"
            android:hint="@string/loginEmailEditText"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/edit_text_min_height"
            android:textColorHint="@color/gray500"
            android:background="@color/gray300"/>

        <TextView
            android:id="@+id/loginPasswordTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_big"
            android:gravity="start"
            android:text="@string/loginPasswordTxt"
            android:textColor="@color/gray500"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/loginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:ems="10"
            android:hint="@string/loginPasswordEditText"
            android:inputType="textPassword"
            android:paddingStart="@dimen/padding_small"
            android:minHeight="@dimen/edit_text_min_height"
            android:textColorHint="@color/gray500"
            android:background="@color/gray300"
            android:layout_marginBottom="@dimen/small_margin"
            />


        <LinearLayout
            android:layout_marginTop="@dimen/small_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="0.5">

        <Button
            android:id="@+id/loginLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginLoginBtn"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/small_margin"
            tools:ignore="UsingOnClickInXml,TextContrastCheck" />

        <Button
            android:id="@+id/loginRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/loginRegisterBtn"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/small_margin"
            tools:ignore="UsingOnClickInXml"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>