<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".ui.InviteFriends.InviteFriendsFragment">


    <TextView
        android:id="@+id/invite_friends_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/invite_friends"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/invite_friends_header_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/invite_friends_header_desc"
        android:textAlignment="center"
        android:textSize="16sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="441dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ui.add_friends.InviteFriendsFragment">

        <LinearLayout
            android:id="@+id/searchBarWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/inviteUserSearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:hint="Freunde finden..."
                android:inputType="text"

                />

            <androidx.cardview.widget.CardView
                android:id="@+id/inviteFriendsSearchBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:backgroundTint="#98A3C3"
                android:padding="16dp"
                app:cardCornerRadius="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_search" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="376dp"
            android:layout_height="364dp"
            android:layout_below="@+id/searchBarWrapper"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSendInvite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_meetup_send_invite"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUserList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnSendFriendRequest"
                android:clipToPadding="false"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/inviteFriendsLoadingCircle"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSendFriendRequest"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="#98A3C3" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>




