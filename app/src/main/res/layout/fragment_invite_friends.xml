<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/padding_small"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    tools:context=".ui.invite_friends.InviteFriendsFragment">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_back_button"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSendInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_meetup_send_invite"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inviteUserSearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_min_height"
        android:layout_marginTop="@dimen/medium_margin_items"
        android:backgroundTint="@color/grey_dark"
        android:hint="@string/searchbar_text_find_friends"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/inviteFriendsSearchBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_friends_header_desc"
        tools:ignore="TextContrastCheck" />

    <ProgressBar
        android:id="@+id/inviteFriendsLoadingCircle"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/gray500"
        app:layout_constraintBottom_toTopOf="@+id/btnSendInvite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inviteUserSearch" />

    <TextView
        android:id="@+id/invite_friends_header_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/invite_friends_header_desc"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/invite_friends_header"
        app:layout_constraintTop_toBottomOf="@+id/invite_friends_header" />

    <TextView
        android:id="@+id/invite_friends_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invite_friends"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/inviteFriendsSearchBtn"
        android:layout_width="@dimen/padding_double"
        android:layout_height="@dimen/padding_double"
        android:backgroundTint="@color/grey_medium"
        app:cardCornerRadius="@dimen/padding_double"
        app:layout_constraintBottom_toBottomOf="@+id/inviteUserSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inviteUserSearch">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_search_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/small_margin"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnSendInvite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inviteUserSearch" />
</androidx.constraintlayout.widget.ConstraintLayout>