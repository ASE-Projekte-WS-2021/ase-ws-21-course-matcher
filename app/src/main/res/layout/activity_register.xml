<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:gravity="center"
            android:text="@string/registerTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_big" />

        <EditText
            android:id="@+id/registerUserNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:ems="10"
            android:hint="@string/loginUserNameEditText"
            android:inputType="textPersonName"
            android:minHeight="@dimen/edit_text_min_height" />

        <EditText
            android:id="@+id/registerFirstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Firstname"
            android:ems="10"
            android:hint="@string/registerFirstNameEditText"
            android:inputType="textPersonName"
            android:minHeight="@dimen/edit_text_min_height" />

        <EditText
            android:id="@+id/registerLastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Lastname"
            android:ems="10"
            android:hint="@string/registerLastNameEditText"
            android:inputType="textPersonName"
            android:minHeight="@dimen/edit_text_min_height" />

        <EditText
            android:id="@+id/registerEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:ems="10"
            android:hint="@string/registerEmailEditText"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/edit_text_min_height" />

        <EditText
            android:id="@+id/registerPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:ems="10"
            android:hint="@string/registerPasswordEditText"
            android:inputType="textPassword"
            android:minHeight="@dimen/edit_text_min_height" />

        <Button
            android:id="@+id/registerRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registerRegisterBtn"
            android:layout_marginTop="@dimen/small_margin"/>

        <Button
            android:id="@+id/registerLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/registerLoginBtn"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/small_margin"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>