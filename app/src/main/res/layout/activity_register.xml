<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegisterActivity">

    <LinearLayout
        android:id="@+id/headerRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_header_orange"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_small"
        android:paddingVertical="@dimen/padding_medium"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_double"
            android:layout_marginBottom="@dimen/small_margin"
            android:gravity="start"
            android:text="@string/registerTitle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/registerTitleDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_big"
            android:layout_marginBottom="@dimen/small_margin"
            android:gravity="start"
            android:text="@string/registerTitleDesc"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>
<!-- TODO: SCROLLVIEW oder kleiner -->
    <ScrollView
        android:id="@+id/scrollRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerRegister"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/padding_big"
            android:weightSum="3">

            <TextView
                android:id="@+id/registerUsernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_big"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="start"
                android:text="@string/registerUsernameTxt"
                android:textColor="@color/gray500"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/registerUsernameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:background="@color/gray300"
                android:ems="10"
                android:hint="@string/loginUserNameEditText"
                android:inputType="textPersonName"
                android:minHeight="@dimen/edit_text_min_height"
                android:paddingStart="@dimen/padding_small"
                android:textColorHint="@color/gray500" />

            <TextView
                android:id="@+id/registerFirstnameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_big"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="start"
                android:text="@string/registerFirstnameText"
                android:textColor="@color/gray500"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/registerFirstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Firstname"
                android:background="@color/gray300"
                android:ems="10"
                android:hint="@string/registerFirstNameEditText"
                android:inputType="textPersonName"
                android:minHeight="@dimen/edit_text_min_height"
                android:paddingStart="@dimen/padding_small"
                android:textColorHint="@color/gray500" />

            <TextView
                android:id="@+id/registerLastnameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_big"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="start"
                android:text="@string/registerLastnameText"
                android:textColor="@color/gray500"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/registerLastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Lastname"
                android:background="@color/gray300"
                android:ems="10"
                android:hint="@string/registerLastNameEditText"
                android:inputType="textPersonName"
                android:minHeight="@dimen/edit_text_min_height"
                android:paddingStart="@dimen/padding_small"
                android:textColorHint="@color/gray500" />

            <TextView
                android:id="@+id/registerEmailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_big"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="start"
                android:text="@string/registerEmailText"
                android:textColor="@color/gray500"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/registerEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:background="@color/gray300"
                android:ems="10"
                android:hint="@string/registerEmailEditText"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/edit_text_min_height"
                android:paddingStart="@dimen/padding_small"
                android:textColorHint="@color/gray500" />

            <TextView
                android:id="@+id/registerPasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_big"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="start"
                android:text="@string/registerPasswordText"
                android:textColor="@color/gray500"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/registerPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:background="@color/gray300"
                android:ems="10"
                android:hint="@string/registerPasswordEditText"
                android:inputType="textPassword"
                android:minHeight="@dimen/edit_text_min_height"
                android:paddingStart="@dimen/padding_small"
                android:textColorHint="@color/gray500"
                android:paddingBottom="@dimen/big_margin"/>

            <Button
                android:id="@+id/registerRegisterBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_big"
                android:gravity="center"
                android:text="@string/registerRegisterBtn" />

            <Button
                android:id="@+id/registerLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@color/white"
                android:text="@string/registerLoginBtn"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>