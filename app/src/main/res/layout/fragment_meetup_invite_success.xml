<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.meetup_invite_success.MeetupInviteSuccessFragment"
    android:gravity="center"
    android:padding="@dimen/padding_big" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meetup_success_icon"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_ultra"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meetup_success_title"
        android:fontFamily="@font/readexpro_semibold"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_big"
        android:layout_marginBottom="@dimen/padding_small"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meetup_success_description"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/gray600"
        android:fontFamily="@font/readexpro_regular"
        android:lineSpacingMultiplier="1.3"
        />

    <Button
        android:id="@+id/btnToMeetupList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meetup_success_btn_text"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:layout_marginTop="@dimen/padding_double"
        />

    </LinearLayout>

</RelativeLayout>