<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:id="@+id/linkWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="@dimen/padding_small"
        android:paddingHorizontal="@dimen/padding_big"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/medium_margin">

        <TextView
            android:id="@+id/availabilityStateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/big_margin"
            tools:text="@string/availability" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignEnd="@+id/availabilityStateText"
            android:id="@+id/availabilityState"
            android:clickable="true">

            <ImageView
                android:id="@+id/dotAvailabilityIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dot_available"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/availabilityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available"
                android:layout_marginStart="@dimen/medium_margin"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</layout>