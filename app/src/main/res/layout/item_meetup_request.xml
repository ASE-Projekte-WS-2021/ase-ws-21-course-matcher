<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meetupRequestLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/big_margin"
    android:paddingTop="@dimen/big_margin"
    android:paddingEnd="@dimen/big_margin">

    <ImageView
        android:id="@+id/acceptButton"
        android:layout_width="@dimen/request_btn_size"
        android:layout_height="@dimen/request_btn_size"
        android:src="@drawable/accept_btn"
        app:layout_constraintBottom_toBottomOf="@+id/meetupRequestImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/meetupRequestImageView" />

    <ImageView
        android:id="@+id/declineButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/medium_margin"
        android:src="@drawable/decline_btn"
        app:layout_constraintBottom_toBottomOf="@+id/acceptButton"
        app:layout_constraintEnd_toStartOf="@+id/acceptButton"
        app:layout_constraintTop_toTopOf="@+id/acceptButton" />

    <ImageView
        android:id="@+id/meetupRequestImageView"
        android:layout_width="@dimen/meetup_icon_image_height"
        android:layout_height="@dimen/meetup_icon_image_height"
        android:src="@drawable/cafe_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/medium_margin"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/meetupRequestImageView"
        app:layout_constraintEnd_toStartOf="@+id/declineButton"
        app:layout_constraintStart_toEndOf="@+id/meetupRequestImageView"
        app:layout_constraintTop_toTopOf="@+id/meetupRequestImageView">

        <TextView
            android:id="@+id/meetupTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:includeFontPadding="false"
            android:textColor="@color/orange_dark"
            android:textSize="@dimen/text_size_description_medium" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:includeFontPadding="false"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_description"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/meetupSenderDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/meetup_request_description"
        android:textColor="@color/black"

        android:textSize="@dimen/text_size_description_small"
        app:layout_constraintStart_toEndOf="@+id/meetupSenderTextView"
        app:layout_constraintTop_toBottomOf="@+id/meetupRequestImageView" />

    <TextView
        android:id="@+id/meetupSenderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/small_margin"
        android:textColor="@color/gray500"
        android:textSize="@dimen/text_size_description_small"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetupRequestImageView" />

    <TextView
        android:id="@+id/sentDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAlignment="textEnd"
        android:textColor="@color/gray400"
        android:textSize="@dimen/text_size_description_small"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="@+id/meetupSenderDescriptionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/meetupSenderDescriptionTextView" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetupSenderDescriptionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>