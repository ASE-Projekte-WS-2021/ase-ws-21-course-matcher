<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:strokeWidth="1dp"
    app:strokeColor="#F3F3F3"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#98A3C3"
            >
            <ImageView
                android:id="@+id/ivUserImageMeetupDetailed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/user_image" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cvImageWrapper"
            android:layout_alignBottom="@+id/cvImageWrapper"
            android:layout_toEndOf="@+id/cvImageWrapper"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMeetupFriendName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{username}"
                android:textColor="#22283A"
                android:textSize="18sp"
                tools:text="Name"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/tvMeetupFriendUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#98A3C3"
                tools:text="Username" />

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>