<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.cm.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.cm.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.cm.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_meetup"
        android:name="com.example.cm.ui.meetup.MeetupFragment"
        android:label="Meetup"
        tools:layout="@layout/fragment_meetup">
        <action
            android:id="@+id/navigateToInviteFriends"
            app:destination="@+id/navigation_invite_friends"/>

    </fragment>

    <!--- TODO: CHANGE THE NAMES!!!!!! -->
    <fragment
        android:id="@+id/navigation_invite_friends"
        android:name="com.example.cm.ui.InviteFriends.InviteFriendsFragment"
        android:label="@string/invite_friends"
        tools:layout="@layout/fragment_invite_friends">
        <action
            android:id="@+id/navigateToInfoMeetup"
            app:destination="@+id/navigation_meetup" />
        <action
            android:id="@+id/navigateToInvitationSuccess"
            app:destination="@id/invitationSuccess" />

    </fragment>
    <fragment
        android:id="@+id/invitationSuccess"
        android:name="com.example.cm.ui.InvitationSuccess.InvitationSuccessFragment"
        android:label="fragment_invitation_success"
        tools:layout="@layout/fragment_invitation_success" >
        <action
            android:id="@+id/navigateToHome"
            app:destination="@id/navigation_home" />
    </fragment>


        android:id="@+id/navigation_profile"
        android:name="com.example.cm.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/navigateToFriends"
            app:destination="@id/navigation_friends"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>


    <fragment
        android:id="@+id/navigation_friends"
        android:name="com.example.cm.ui.friends.FriendsFragment"
        android:label="@string/title_friends"
        tools:layout="@layout/fragment_friends">

        <action
            android:id="@+id/navigateToSelectFriends"
            app:destination="@id/navigation_select_friends" />
    </fragment>

    <fragment
        android:id="@+id/navigation_select_friends"
        android:name="com.example.cm.ui.select_friends.SelectFriendsFragment"
        android:label="@string/title_find_friends"
        tools:layout="@layout/fragment_select_friends" />
</navigation>